<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/imageview_library_detail_gridview_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/title"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:src="@drawable/unknown_application" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_library_detail_gridview_item_cover"
        android:layout_alignTop="@id/imageview_library_detail_gridview_item_cover"
        android:layout_toRightOf="@id/imageview_library_detail_gridview_item_cover"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_library_detail_gridview_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/unknown"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textview_library_detail_gridview_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/unknown"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textview_library_detail_gridview_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/unknown"
            android:textColor="#000000"
            android:textSize="10dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_multi"
        style="@style/checkbox_multiple_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

</RelativeLayout>
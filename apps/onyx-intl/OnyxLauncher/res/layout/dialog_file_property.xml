<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_directory_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:minWidth="190dp"
            android:padding="10dp"
            android:text="@string/property" />

        <Button
            android:id="@+id/button_open_with"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:minWidth="190dp"
            android:padding="10dp"
            android:text="@string/open_with" />
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageview_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/title" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_name"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_title"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_authors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_authors"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_authors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_rating"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_publisher"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_tags"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_series"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_series"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_series"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_isbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_isbn"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_date"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_published"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/file_property_published"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_published"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textview_label_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:text="@string/file_property_description"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edittext_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edittext_background"
                        android:ellipsize="middle"
                        android:hint="@string/hint"
                        android:lines="3"
                        android:padding="2dp"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/layout_paged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_previous_page_background"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp" />

                <TextView
                    android:id="@+id/textview_paged"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="@string/paged_init_text"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_next_page_background"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/layout_paged"
                android:layout_alignTop="@id/layout_paged"
                android:layout_toLeftOf="@id/layout_paged"
                android:text="@string/open_with"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/primary_text_light"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textview_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/textview_title"
                android:background="#000000" />

            <TextView
                android:id="@+id/textview_unable_open_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_line"
                android:text="@string/unable_open_file"
                android:textColor="@android:color/primary_text_light"
                android:textSize="25dp"
                android:visibility="gone" />

            <com.onyx.android.sdk.ui.OnyxGridView
                android:id="@+id/gridview_open_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_line"
                android:background="#FFFFFF" />
        </RelativeLayout>
    </ViewSwitcher>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:minWidth="190dp"
            android:text="@string/set"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:minWidth="190dp"
            android:text="@string/cancel"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left|center_vertical"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/imageview_settings_gridview_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unknown_application"
        android:contentDescription="@string/title" />

    <TextView
        android:id="@+id/textviewr_settings_gridview_itme_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="@string/unknown"
        android:textColor="#000000"
        android:layout_toRightOf="@id/imageview_settings_gridview_item_cover" />

</RelativeLayout>
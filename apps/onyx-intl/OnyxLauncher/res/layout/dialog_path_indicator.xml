<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:minWidth="290dp"
    android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/imageview_path_title"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="@string/title" />
        <TextView 
            android:id="@+id/textview_paht_title"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="@string/path" 
            android:textColor="@android:color/primary_text_light"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/imageview_path_title"
            android:layout_alignTop="@id/imageview_path_title"
            android:layout_alignBottom="@id/imageview_path_title" />
    </RelativeLayout>
    <com.onyx.android.sdk.ui.OnyxGridView
        android:id="@+id/gridview_path_indicator" 
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:background="#FFFFFF"
        android:layout_weight="1.0" />
    <Button 
        android:id="@+id/button_cancel" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background" 
        android:text="@string/cancel"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="5dp" />
</LinearLayout>
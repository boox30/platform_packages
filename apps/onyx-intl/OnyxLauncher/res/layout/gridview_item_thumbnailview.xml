<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_thumbnail_gridview_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="@string/unknown"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageview_thumbnail_gridview_item_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/textview_thumbnail_gridview_item_name"
        android:contentDescription="@string/title"
        android:src="@drawable/unknown_application" />

    <CheckBox
        android:id="@+id/checkbox_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        style="@style/checkbox_style"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>